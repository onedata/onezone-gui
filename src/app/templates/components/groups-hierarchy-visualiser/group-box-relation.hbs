{{#if (not hasViewPrivilege)}}
  {{one-icon icon="no-view"}}
{{else if relationIsLoading}}
  {{!-- nbsp produces proper height of the box --}}
  &nbsp;
  {{spin-spinner scale=0.1 lines=8 length=20 width=15}}
{{else if relationIsRejected}}
  {{one-icon icon="ban-left"}}
{{else}}
  {{#if (eq relationType "children")}}
    <span class="relations-number">{{relation.length}}</span>
    {{one-icon icon="arrow-right"}}
  {{else}}
    {{one-icon icon="arrow-left"}}
    <span class="relations-number">{{relation.length}}</span>
  {{/if}}
{{/if}}

{{!-- optimization: rendering tooltip on hover --}}
{{#render-later triggerRender=renderTooltip}}
  {{one-tooltip title=tooltipText}}
{{/render-later}}
