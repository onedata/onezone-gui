{{one-icon class="sidebar-item-icon" icon="light-bulb"}}
{{one-inline-editor
  isEditing=isRenaming
  value=item.name
  showEmptyInfo=false
  onSave=(action "rename")
  editOnClick=false
  onEdit=(action "toggleRename")
  class="one-label name-editor"
  click=(action "editorClick")}}
{{actions-toolbar
  isMinimized=true
  dropdownPlacement="auto"
  actionsArray=itemActions}}

{{leave-modal
  opened=isLeaveModalOpened
  close=(action "closeLeaveModal")
  proceed=(action "leave")
  processing=isLeaving
  record=harvester}}

{{harvester-remove-modal
  opened=isRemoveModalOpened
  close=(action "closeRemoveModal")
  proceed=(action "remove")
  processing=isRemoving
  record=harvester}}
