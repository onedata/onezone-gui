<figure class="invite-subject-image">
  <img class="subject-image" src={{root-url invitedModelImagePath}}>
  <figcaption class="subject-image-label">
    {{#if joiningRecord}}
      <div class="subject-description">
        {{#truncated-string class="text subject-name"}}
          {{joiningRecord.name}}
        {{/truncated-string}}
        <div
          class="joining-record-info-trigger popover-info-trigger"
          {{action
            (mut joiningRecordInfoOpened)
            (not joiningRecordInfoOpened)
            bubbles=false
          }}
        >
          {{one-icon icon="browser-info" class="record-info-icon"}}
        </div>
      </div>
    {{else}}
      {{#truncated-string class="text select-below-label"}}
        {{placeholderUnderSubjectImage}}
      {{/truncated-string}}
    {{/if}}
  </figcaption>
</figure>
<figure class="join-arrow-image">
  <figcaption class="arrow-label">
    {{tt this (concat 'label.' arrowLabelType)}}
  </figcaption>
  <div class="arrow"></div>
</figure>
<figure class="invite-target-image">
  <img class="subject-image" src={{root-url inviteTargetModelImagePath}}>
  <figcaption class="subject-image-label subject-name">
    <div class="subject-description">
      {{#truncated-string class="text"}}
        {{inviteTargetRecord.name}}
      {{/truncated-string}}
      <div
        class="target-record-info-trigger popover-info-trigger"
        {{action
          (mut targetRecordInfoOpened)
          (not targetRecordInfoOpened)
          bubbles=false
        }}
      >
        {{one-icon icon="browser-info" class="record-info-icon"}}
      </div>
    </div>
  </figcaption>
</figure>
{{#record-info-popover
  isOpened=joiningRecordInfoOpened
  triggerSelector=(concat "#" elementId " .joining-record-info-trigger .record-info-icon")
}}
  {{component (concat joiningModelName "-info-content")
    record=joiningRecord
    errorReason=errorReason
  }}
{{/record-info-popover}}
{{#record-info-popover
  isOpened=targetRecordInfoOpened
  triggerSelector=(concat "#" elementId " .target-record-info-trigger .record-info-icon")
}}
  {{component inviteTargetInfoComponentName
    record=inviteTargetRecord
    errorReason=errorReason
    showDetails=showDetailsForInviteTarget
  }}
{{/record-info-popover}}
