{{#promise-proxy-container proxy=_providersProxy}}
  {{#if (and _mobileMode selectedProvider)}}
    {{provider-place/drop provider=selectedProvider class="in-content"}}
  {{else}}
    {{#one-atlas as |atlas|}}
      {{#each _clusteredProviders as |square|}}
        {{#atlas.position latitude=square.latitude longitude=square.longitude as |position|}}
          {{#position.point}}
            {{#link-to "onedata.sidebar.content.aspect" "providers" square.providers.[0].id "index"}}
              {{provider-place
                provider=square.providers
                atlasWidth=atlas.width
                circleSizeScale=1.2
                active=(contains selectedProvider square.providers)
                renderDrop=(contains selectedProvider square.providers)
                selectedProvider=selectedProvider
                providerSelectedAction=(action "providerChanged")}}
            {{/link-to}}
          {{/position.point}}
        {{/atlas.position}}
      {{/each}}
    {{/one-atlas}}
  {{/if}}
{{/promise-proxy-container}}
