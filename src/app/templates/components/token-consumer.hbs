<div class="token-container">
  <input
    type="text"
    class="token-string form-control"
    placeholder={{tt this "tokenInputPlaceholder"}}
    oninput={{action "tokenChanged" value="target.value"}}
  >
  {{#if pendingCheckTime}}
    {{spin-spinner-block sizeClass="xs"}}
  {{/if}}
</div>
{{#if invalidTokenErrorOccured}}
  <div class="invalid-token-message alert alert-warning" role="alert">
    {{tt this "invalidTokenMessage"}}
  </div>
{{else if error}}
  {{#if knownErrors}}
    <div class="alert alert-info" role="alert">
      {{errorTranslator}}
    </div>
  {{else}}
    {{resource-load-error reason=error}}
  {{/if}}
{{/if}}
{{#one-collapse collapsed=(and invalidTokenErrorOccured error)}}
  {{#if typeText}}
    <div class="type-info">
      <p class="token-type">
        {{typeText}}
        {{#if hasUnresolvedTargetName}}
          <img
            class="warning-icon {{elementId}}-warning-icon"
            src={{root-url "assets/images/sign-warning-large.svg"}}
          >
          {{one-tooltip
            title=(tt this "unresolvedTargetWarning")
            triggerElement=(concat "." elementId "-warning-icon")
            triggerEvent="hover"
          }}
        {{/if}}
      </p>
      {{#unless (or media.isMobile noJoinMessage)}}
        <figure class="consume-token-image">
          <figure class="invite-subject-image">
            <img width=150 class="subject-image" src="assets/images/consume-token/{{inviteType}}.svg">
            <figcaption class={{concat-classes (if (and joiningRecordSelectorModelName (not selectedJoiningRecordOption)) "select-below-label" "subject-name")}}>
              {{#truncated-string class="text"}}
                {{#if (and joiningRecordSelectorModelName selectedJoiningRecordOption)}}
                  {{selectedJoiningRecordOption.label}}
                {{else if joiningRecordSelectorModelName}}
                  {{tt this "descriptionPicture"}}
                {{else}}
                  {{inviteName}}
                {{/if}}
              {{/truncated-string}}
            </figcaption>
          </figure>
          <figure class="join-arrow-image">
            <figcaption class="arrow-label">{{tt this "arrowLabel"}}</figcaption>
            <div class="arrow"></div>
          </figure>
          <figure class="invite-target-image">
            <img width=150 class="subject-image" src="assets/images/consume-token/{{inviteTargetModelName}}.svg">
            <figcaption class="subject-name">
              {{#truncated-string class="text"}}
                {{inviteTargetName}}
              {{/truncated-string}}
            </figcaption>
          </figure>
        </figure>
      {{/unless}}
    </div>
  {{/if}}
  {{#if noJoinMessage}}
    <div class="no-join-message alert alert-info" role="alert">
      {{noJoinMessage}}
    </div>
  {{/if}}
  {{#if joiningRecordSelectorModelName}}
    <div class="joining-record-container">
      {{#promise-proxy-container proxy=joiningRecordSelectorOptionsProxy sizeClass="sm"}}
        <p class="selector-description">{{joiningRecordSelectorDescription}}</p>
        <div class="joining-record-selector">
          {{#one-dropdown
            options=joiningRecordSelectorOptionsProxy
            onchange=(action (mut selectedJoiningRecordOption))
            selected=selectedJoiningRecordOption
            renderInPlace=true
            placeholder=(tt this
              (concat "recordSelectorPlaceholder." joiningRecordSelectorModelName)
            )
            as |recordOption|
          }}
            <div class="option-container">
              {{one-icon icon=recordOption.icon}}
              {{#truncated-string class="text" style="line-height=22px"}}
                {{recordOption.label}}
              {{/truncated-string}}
            </div>
          {{/one-dropdown}}
        </div>
      {{/promise-proxy-container}}
    </div>
  {{/if}}
  {{#if showJoinBtn}}
    {{#one-spin-button
      class="discard-btn btn btn-lg btn-warning"
      action=(action "cancel")
    }}
      {{tt this "cancelBtn"}}
    {{/one-spin-button}}
    {{#one-spin-button
      class="join-btn btn btn-lg btn-primary"
      disabled=isJoinBtnDisabled
      action=(action "join")
    }}
      {{tt this "joinBtn"}}
    {{/one-spin-button}}
  {{/if}}
{{/one-collapse}}
{{yield}}
