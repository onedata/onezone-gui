<td class={{concat-classes
    "priv"
    (if isModifiedPriv "modified-priv")
  }}
>
  {{privilege.text}}
</td>
<td class={{concat-classes "toggle-column direct" (if (not isDirect) "na")}}>
  {{#if isDirect}}
    {{#form.group}}
      {{one-way-toggle
        class=inputClass
        inputId=inputId
        checked=directPrivilegeValue
        threeState=privilege.field.threeState
        allowThreeStateToggle=privilege.field.allowThreeStateToggle
        showLockForReadOnly=false
        isReadOnly=false
        update=(action "inputChanged")
        isReadOnly=(not editionEnabled)
      }}
    {{/form.group}}
  {{else}}
    {{tt this "na"}}
  {{/if}}
</td>
{{#if (not isBulkEdit)}}
  <td
    class={{concat-classes
      "toggle-column effective"
      (if
        (and (and
          (or (not isModifiedPriv) arePrivilegesUpToDate)
          (not effectivePrivilegeValue)
        ) (not isDisplayedEffectivePrivGranted))
        "revoke"
      )
    }}
    onmouseover={{action "highlightMemberships"}}
    onmouseleave={{action "resetHighlights"}}
  >
    {{#if isDisplayedEffectivePrivGranted}}
      {{one-icon icon="checked"}}
      {{#promise-proxy-container
        proxy=effPrivilegesRealAffectorRecords
        sizeClass="xxs"
      }}
        {{one-tooltip title=tooltipText}}
      {{/promise-proxy-container}}
    {{else if (or
      isModifiedPriv (and (not arePrivilegesUpToDate) effectivePrivilegeValue)
    )}}
      <div class="priv-unknown">?</div>
      {{one-tooltip title=(tt this "unknownPrivilege")}}
    {{else}}
      <div class="priv-revoke">â€“</div>
    {{/if}}
    {{#if (not arePrivilegesUpToDate)}}
      {{spin-spinner-block sizeClass="xxs"}}
    {{/if}}
  </td>
{{/if}}
