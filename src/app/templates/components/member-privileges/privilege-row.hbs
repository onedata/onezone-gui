<td class={{concat-classes
    "priv"
    (if isModifiedPriv "modified-priv")
  }}
>
  {{privilege.text}}
</td>
<td class={{concat-classes "toggle-column direct" (if (not isDirect) "na")}}>
  {{#if isDirect}}
    {{#form.group}}
      {{one-way-toggle
        class=inputClass
        inputId=inputId
        checked=directPrivilegeValue
        threeState=privilege.field.threeState
        allowThreeStateToggle=privilege.field.allowThreeStateToggle
        showLockForReadOnly=false
        isReadOnly=false
        update=(action "inputChanged")
        isReadOnly=(not editionEnabled)
      }}
    {{/form.group}}
  {{else}}
    {{tt this "na"}}
  {{/if}}
</td>
{{#if (not isBulkEdit)}}
  <td
    class={{concat-classes
      "toggle-column effective"
      (if
        (and
          (or (not isModifiedPriv) arePrivilegesReloaded)
          (not effectivePrivilegeValue)
        )
        "revoke"
      )
    }}
  >
    {{#if isDisplayedEffectivePrivGranted}}
      {{one-icon icon="checked"}}
    {{else if (or
      isModifiedPriv (and (not arePrivilegesReloaded) effectivePrivilegeValue)
    )}}
      <div class="priv-unknown">?</div>
      {{one-tooltip title="Blabla..."}}
    {{else}}
      <div class="priv-revoke">â€“</div>
    {{/if}}
    {{#if (not arePrivilegesReloaded)}}
      {{spin-spinner-block sizeClass="xxs"}}
    {{/if}}
  </td>
{{/if}}
