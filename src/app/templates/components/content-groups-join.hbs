{{#content-info
  class="scroll-breakpoint-700"
  header=(tt this "header")
  imagePath=(root-url "assets/images/group-join.svg")
  text=(tt this "text")
  buttonLabel=(tt this "joinButton")
  buttonAction=(action "joinGroup" token)
  buttonDisabled=(not token)
  as |contentInfo|
}}
  <div class="row">
    <div class="col-xs-12">
      <input
        id="join-group-token"
        value={{token}}
        oninput={{action (mut token) value="target.value"}}
        onkeydown={{invoke-on-enter contentInfo.buttonAction}}
        placeholder={{tt this "placeholder"}}
        disabled={{contentInfo.actionInProgress}}
        class="form-control join-group-token"
      >
    </div>
  </div>
{{/content-info}}
