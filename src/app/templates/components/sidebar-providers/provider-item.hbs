{{one-icon icon="provider"}} 
{{#truncated-string class="after-icon before-status"}}
  <span class="one-label">{{item.name}}</span>
{{/truncated-string}}
{{#if (or _spaceIdsLoaded _spacesLoaded)}}
  {{#status-toolbar as |toolbar|}}
    {{#if _spaceIdsLoaded}}
      {{toolbar.icon 
        icon="space"
        innerText=_spaces.length
        hint=(tt this "spaceCountHint" count=_spaces.length)
      }}
    {{/if}}
    {{#if _spacesLoaded}}
      {{toolbar.icon
        icon="provider"
        outerText=_totalSupportSizeHuman
        hint=(tt this "totalSupportHint" size=_totalSupportSizeHuman)
      }}
    {{/if}}
  {{/status-toolbar}}
{{/if}}

