{{one-icon icon="provider"}} 
{{#truncated-string class="after-icon"}}
  <span class="one-label">{{item.name}}</span>
{{/truncated-string}}
{{#if (or _spaceIdsLoaded _spacesLoaded)}}
  {{#status-toolbar as |toolbar|}}
    {{#if _spaceIdsLoaded}}
      {{toolbar.icon 
        icon="space"
        innerText=_spaces.length
      }}
    {{/if}}
    {{#if _spacesLoaded}}
      {{toolbar.icon
        icon="provider"
        outerText=(bytes-to-string _totalSupportSize)
      }}
    {{/if}}
  {{/status-toolbar}}
{{/if}}

