<a {{action 'clicked'}} class="login-icon-box auth-icon {{type}}">
  {{#if active}}
    {{spin-spinner scale=spinnerScale lines=12 length=20 width=10}}
  {{else}}
    {{#if (eq iconType "oneicon")}}
      {{one-icon tagName="div" icon=_iconName}}
    {{else if (eq iconType "text")}}
      {{yield}}
    {{else}}
      <div class="social-icon-image" style={{_socialIconStyle}}></div>
    {{/if}}
  {{/if}}
</a>
{{#if tip}}
  {{one-tooltip title=tip}}
{{/if}}
