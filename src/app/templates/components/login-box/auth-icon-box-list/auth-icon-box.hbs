<a
  {{action "clicked"}}
  class="login-icon-box auth-icon {{authId}}"
  style={{aStyle}}
>
  {{#if active}}
    {{spin-spinner scale=spinnerScale lines=12 length=20 width=10}}
  {{else}}
    <div class="auth-icon-image" style={{authIconStyle}}>
      {{yield}}
    </div>
  {{/if}}
</a>
{{#if tip}}
  {{one-tooltip title=tip}}
{{/if}}
