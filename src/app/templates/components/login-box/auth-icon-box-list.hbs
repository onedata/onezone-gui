<div class="row buttons-list">
  <div class="col-xs-12 col-centered">
    <div class="row row-centered">
      {{#if isLoading}}
        <div class="spinner-container">
          {{spin-spinner scale=1 lines=12 length=20 width=10}}
        </div>
      {{else}}
        {{#if errorMessage}}
          {{t "components.loginBox.authIconBoxList.fetchProvidersFailed"}}: {{errorMessage}}
        {{else}}
          <div>
            {{#each supportedAuthorizers as |authorizer|}}
              {{login-box/auth-icon-box-list/auth-icon-box
                authId=authorizer.id
                iconPath=authorizer.iconPath
                iconBackgroundColor=authorizer.iconBackgroundColor
                tip=(concat (t "components.loginBox.authIconBoxList.signInUsing") authorizer.displayName)
                action=(action (if (eq authorizer.id "basicAuth") "usernameBoxClick" "authenticate"))
              }}
            {{/each}}
            {{#if showMoreButton}}
              {{login-box/auth-icon-box-list/auth-icon-box
                authId="more"
                authIconStyle=""
                iconBackgroundColor="#fff"
                action=(action "showMoreClick")
                tip=(t "components.loginBox.authIconBoxList.showMore")
              }}
            {{/if}}
          </div>
        {{/if}}
      {{/if}}
    </div>
  </div>
</div>
