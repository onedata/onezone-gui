<div class="row buttons-list">
  <div class="col-xs-12 col-centered">
    <div class="row row-centered">
      {{#if isLoading}}
        <div class="spinner-container">
          {{spin-spinner scale=1 lines=12 length=20 width=10}}
        </div>
      {{else}}
        {{#if errorMessage}}
          {{t "components.loginBox.socialBoxList.fetchProvidersFailed"}}: {{errorMessage}}
        {{else}}
          <div>
            {{#each supportedAuthorizers as |authorizer|}}
              {{!-- basicAuth is a special case --}}
              {{#if (eq authorizer.type "basicAuth")}}
                {{login-box/social-box-list/social-box 
                  type="username" 
                  iconType=authorizer.iconType 
                  iconName=authorizer.iconName
                  tip=(concat (t "components.loginBox.socialBoxList.loginUsing") (t "components.loginBox.socialBoxList.onepanelAccount"))
                  action="usernameBoxClick"}}
              {{else}}
                {{login-box/social-box-list/social-box 
                  type=authorizer.type
                  iconType=authorizer.iconType
                  iconName=authorizer.iconName
                  tip=(concat (t "components.loginBox.socialBoxList.loginUsing") authorizer.name)
                  action="authenticate"
                }}
              {{/if}}
            {{/each}}
            {{#if showMoreButton}}
              {{login-box/social-box-list/social-box 
                type="more"
                iconType="text"
                action="showMoreClick"
                tip=(t "components.loginBox.socialBoxList.showMore")
              }}
            {{/if}}
          </div>
        {{/if}}
      {{/if}}
    </div>
  </div>
</div>
