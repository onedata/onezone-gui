<div class="progress upload-summary-header-progress-bar">
  <div class="progress-bar" role="progressbar" style={{progressBarWidthStyle}}></div>
</div>
<div class="upload-summary-header-text">
  {{#if (eq numberOfFiles 1)}}
    {{tt this "uploading1File"}}
  {{else}}
    {{tt this "uploadingNFiles" numberOfFiles=(or numberOfFiles 0)}}
  {{/if}}
</div>
<div class="upload-summary-header-icons">
  {{one-icon
    class="upload-summary-header-cancel cancel-action"
    icon="checkbox-x"
    click=(action onCancel)}}
</div>
