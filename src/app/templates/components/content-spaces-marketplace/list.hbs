<div class="form-group-light search-form-group">
  <div class="input-group with-icon-addon">
    {{search-bar search=(action "changeSearchValue") class="form-control"}}
    <div class="input-group-addon">
      {{one-icon icon="search"}}
    </div>
  </div>
</div>
<ul class="list-entries">
  {{#each sortedCollection as |spaceItem|}}
    {{content-spaces-marketplace/item viewModel=viewModel spaceItem=spaceItem}}
  {{else}}
    {{#if searchValue}}
      <p>{{tt this "noMatchingResults"}}</p>
    {{/if}}
  {{/each}}
</ul>
{{yield}}
