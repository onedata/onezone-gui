{{#one-webui-popover
  class="space-tags-selector"
  open=true
  triggerSelector=(concat "#" elementId)
  arrow=false
  registerApi=(action (mut popoverApi))
  padding=false
  placement="vertical"
  popoverStyle="tags-selector"
  as |popover|
}}
  {{#click-outside
    class="selector-container"
    onClickOutside=onEndTagCreation
    exceptSelector=popoverClickOutsideIgnoreSelector
  }}
    {{#bs-button-group
      value=selectedCategory
      class="category-selector btn-group-justified"
      type="radio"
      onChange=(action (mut selectedCategory))
      as |bg|
    }}
      {{#each tagCategories as |categoryName|}}
        <div class="btn-group" role="group">
          {{#bg.button
            type="default"
            class=(concat "btn-sm btn-" categoryName)
            value=categoryName
          }}
            {{tt this (concat "category." categoryName)}}
          {{/bg.button}}
        </div>
      {{/each}}
    {{/bs-button-group}}

    <hr class="content-separator">

    {{#perfect-scrollbar-element}}
      {{#if tagsToRender.length}}
        <ul class="selector-list">
          {{#each tagsToRender key="id" as |tag|}}
            <li
              class="selector-item"
              {{action "tagSelected" tag}}
            >
              {{#truncated-string class="tag-label"}}{{tag.label}}{{/truncated-string}}
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p class="text-center">{{tt this "allCategoryTagsUsed"}}</p>
      {{/if}}
    {{/perfect-scrollbar-element}}
  {{/click-outside}}
{{/one-webui-popover}}
