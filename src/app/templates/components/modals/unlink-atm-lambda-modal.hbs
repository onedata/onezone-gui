{{#global-modal
  classNames="unlink-atm-lambda-modal"
  allowClose=(not isSubmitting)
  modalId=modalId
  as |modal|
}}
  {{#modal.header}}
    <h1>
      {{one-icon icon="sign-warning-rounded"}}
      <span class="one-label">{{tt this "header"}}</span>
    </h1>
  {{/modal.header}}

  {{#modal.body}}
    <p class="description">
      {{tt this "description"
        atmInventoryName=atmInventory.name
        atmLambdaName=atmLambda.name
      }}
    </p>
    {{one-way-radio-group
      class="unlink-options"
      options=radioOptions
      value=selectedRadioValue
      isReadOnly=isSubmitting
      update=(action "radioValueChange")
    }}
  {{/modal.body}}

  {{#modal.footer class="btn-toolbar"}}
    {{#bs-button
      type="default"
      class="cancel-btn"
      onClick=modal.close
      disabled=isSubmitting
    }}
      {{tt this "cancel"}}
    {{/bs-button}}
    {{#one-button
      type="danger"
      buttonType="submit"
      class="submit-btn"
      onClick=(action "submit" modal.submit)
    }}
      {{tt this "submit"}}
    {{/one-button}}
  {{/modal.footer}}
{{/global-modal}}
