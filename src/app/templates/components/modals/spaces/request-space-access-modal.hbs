{{#global-modal
  classNames="request-space-access-modal"
  modalId=modalId
  as |modal|
}}

  {{#modal.header}}
    <h1>
      {{one-icon icon="sign-info-rounded"}}
      <span class="one-label">{{tt this "header"}}</span>
    </h1>
  {{/modal.header}}

  {{#modal.body}}
    <p>{{tt this "body.intro" spaceName=spaceName}}</p>
  {{/modal.body}}

  {{#modal.footer class="btn-toolbar"}}
    {{!-- {{#one-button
      type="default"
      class="cancel-btn"
      onClick=modal.close
    }}
      {{tt this closeButtonType}}
    {{/one-button}}
    {{#if isProceedButtonVisible}}
      {{#one-button
        type="primary"
        class="proceed-btn"
        disabled=(not isProceedAvailable)
        onClick=(if isProceedAvailable (action modal.submit selectedSpace.entityId))
      }}
        {{tt this "proceed"}}
      {{/one-button}}
    {{/if}} --}}
  {{/modal.footer}}

{{/global-modal}}
