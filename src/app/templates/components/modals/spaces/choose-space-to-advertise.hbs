{{#global-modal
  classNames="choose-space-to-advertise-modal"
  modalId=modalId
  as |modal|
}}

  {{#modal.header}}
    <h1>
      {{one-icon icon="sign-info-rounded"}}
      <span class="one-label">{{tt this "header"}}</span>
    </h1>
  {{/modal.header}}

  {{#modal.body}}
    {{#promise-proxy-container proxy=allSpacesProxy}}
      {{#if noSpaces}}
        <p>{{tt this "noSpacesText"}}</p>
      {{else if areAllSpacesAdvertised}}
        <p>{{tt this "allAdvertisedText"}}</p>
      {{else}}
          {{log 'a' allSpaces.length}}
          {{log 'n' nonAdvertisedSpaces.length}}
        <p>{{tt this "introText"}}</p>
      {{/if}}
    {{/promise-proxy-container}}
  {{/modal.body}}

  {{#modal.footer class="btn-toolbar"}}
    {{#one-button
      type="default"
      class="cancel-btn"
      onClick=modal.close
    }}
      {{tt this closeButtonType}}
    {{/one-button}}
    {{#one-button
      type="primary"
      buttonType="submit"
      class="proceed-btn"
      onClick=(action "submit" modal.submit)
      disabled=areButtonsDisabled
    }}
      {{tt this "proceed"}}
    {{/one-button}}
  {{/modal.footer}}

{{/global-modal}}
