{{#global-modal
  classNames="enable-markeplace-advertisement-modal"
  allowClose=(not isSubmitting)
  modalId=modalId
  as |modal|
}}

  {{#modal.header}}
    <h1>
      {{one-icon icon="sign-warning-rounded"}}
      <span class="one-label">{{tt this "header"}}</span>
    </h1>
  {{/modal.header}}

  {{#modal.body}}
    <p>{{tt this "body.text"}}</p>
  {{/modal.body}}

  {{#modal.footer class="btn-toolbar"}}
    {{#one-button
      type="default"
      class="cancel-btn"
      onClick=modal.close
      disabled=areButtonsDisabled
    }}
      {{tt this "cancel"}}
    {{/one-button}}
    {{#one-button
      type="warning"
      buttonType="submit"
      class="proceed-btn"
      onClick=(action "submit" modal.submit)
      disabled=areButtonsDisabled
    }}
      {{tt this "proceed"}}
    {{/one-button}}
  {{/modal.footer}}

{{/global-modal}}
