{{#global-modal
  class=modalClass
  modalId=modalId
  size="lg"
  as |modal|
}}
  {{#modal.header}}
    <h1>
      <span class="one-label">{{tt this "header"}}</span>
    </h1>
  {{/modal.header}}
  {{#modal.body class="api-samples"}}
    {{#promise-proxy-container
      proxy=apiSamplesProxy
      sizeClass="sm"
      centered=false
      spinnerBlockClass="loading-api-command absolute-middle-centered"
    }}
      {{api-samples
        apiSamples=apiSamples
        previewMode=false
      }}
    {{/promise-proxy-container}}
  {{/modal.body}}
  {{#modal.footer class="btn-toolbar"}}
    {{#bs-button type="default" class="modal-close" onClick=modal.close}}
      {{tt this "close"}}
    {{/bs-button}}
  {{/modal.footer}}
{{/global-modal}}