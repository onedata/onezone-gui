{{#global-modal
  classNames="api-samples-modal"
  modalId=modalId
  size="lg"
  as |modal|
}}
  {{#modal.header}}
    <h1>
      <span class="one-label">{{tt this "header"}}</span>
    </h1>
  {{/modal.header}}
  {{#modal.body}}
    {{#promise-proxy-container
      proxy=apiSamplesProxy
      sizeClass="sm"
      centered=false
      spinnerBlockClass="loading-api-command absolute-middle-centered"
    }}
      {{api-samples
        apiSamples=apiSamples
        apiSubject=apiSubject
      }}
    {{/promise-proxy-container}}
  {{/modal.body}}
  {{#modal.footer class="btn-toolbar"}}
    {{#one-button type="default" class="modal-close" onClick=modal.close}}
      {{tt this "close"}}
    {{/one-button}}
  {{/modal.footer}}
{{/global-modal}}