<div class="row">
  <div class="row relative">
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-6">
      <div class="row content-row no-border">
        <p>{{tt this "desc1"}}</p>
        <p>{{tt this "desc2"}}</p>
        <p>{{tt this "desc3"}}</p>
      </div>
    </div>
    <div class="col hidden-xs hidden-sm col-md-7 col-lg-6 col-vertical-middle-absolute-right">
      <img class="image-support" src={{root-url "assets/images/space-support-request.svg"}}>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="row content-row no-border">
      <div class="inner-row-content">
        <h5>{{t "components.contentSpacesSupport.tabsCommon.token"}}</h5>
        <div class="row loadable-row lg">
          {{#promise-proxy-container proxy=supportTokenProxy}}
            <textarea class="token-textarea support-token no-resize form-control" rows="6" readonly>{{supportTokenProxy.content}}</textarea>
            {{#copy-button
              success=(action "copySuccess" "token")
              error=(action "copyError" "token")
              class="btn btn-primary pull-left"
              clipboardTarget=".token-textarea.support-token"
            }}
              {{one-icon icon="browser-copy"}}
              {{t "components.contentSpacesSupport.tabsCommon.copy"}}
            {{/copy-button}}
            <a class="clickable btn-get-token pull-right" {{action "getNewSupportToken"}}>
              {{t "components.contentSpacesSupport.tabsCommon.generateToken"}}
            </a>
          {{/promise-proxy-container}}
        </div>
      </div>
    </div>
  </div>
</div>
