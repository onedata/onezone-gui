{{#content-info
  class=(concat-classes "scroll-breakpoint-700" (if isInnerView "preserve-header"))
  header=(tt this "header")
  imagePath="assets/images/group-join-group.svg"
  text=(or text (tt this "text" groupName=group.name))
  buttonLabel=(tt this "joinButton")
  buttonAction=(action "joinGroup" token)
  buttonDisabled=(not token)
  as |contentInfo|
}}
  <div class="row">
    <div class="col-xs-12">
        <input
          id="join-group-token"
          value={{token}}
          oninput={{action (mut token) value="target.value"}}
          onkeydown={{invoke-on-enter contentInfo.buttonAction}}
          placeholder={{tt this "placeholder"}}
          disabled={{contentInfo.actionInProgress}}
          class="form-control join-as-subgroup-token"
        >
    </div>
  </div>
{{/content-info}}
