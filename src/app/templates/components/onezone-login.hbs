<PromiseProxyContainer @proxy={{isCustomFrontpageAvailableProxy}}>
  {{#if isCustomFrontpageShown}}
    <iframe
      id={{customFrontpageIframeId}}
      src={{frontpagePath}}
      frameborder="0"
      class="onezone-custom-frontpage-iframe"
    ></iframe>
  {{else}}
    <LoginLayout @loginViewModel={{loginViewModel}}>
      <LoginBox
        @authenticationSuccess="authenticationSuccess"
        @authenticationErrorReason={{authenticationErrorReason}}
        @authenticationErrorState={{authenticationErrorState}}
        @loginViewModel={{loginViewModel}}
      />
    </LoginLayout>
  {{/if}}
</PromiseProxyContainer>
