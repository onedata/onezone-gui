{{#one-carousel activeSlideId=activeSlide as |carousel|}}
  {{#carousel.slide slideId="list"}}
    {{content-inventories-workflows/list-view
      atmInventory=atmInventory
      onAddWorkflowSchema=(action "showCreatorView")
      onOpenWorkflowSchema=(action "showEditorView")
      onRegisterViewActions=(action "registerViewActions" "list")
    }}
  {{/carousel.slide}}
  {{#carousel.slide slideId="editor"}}
    {{#if activeAtmWorkflowSchemaId}}
      {{#if activeAtmWorkflowSchemaProxy.isFulfilled}}
        {{content-inventories-workflows/editor-view
          atmWorkflowSchema=activeAtmWorkflowSchemaProxy.content
          onBackSlide=(action "backSlide")
        }}
      {{else}}
        {{content-inventories-workflows/loading-view
          loadingProxy=activeAtmWorkflowSchemaProxy
          onBackSlide=(action "backSlide")
        }}
      {{/if}}
    {{else}}
      {{content-inventories-workflows/creator-view
        atmInventory=atmInventory
        onBackSlide=(action "backSlide")
        onAtmWorkflowSchemaAdded=(action "showEditorView")
      }}
    {{/if}}
  {{/carousel.slide}}
{{/one-carousel}}
{{yield}}
